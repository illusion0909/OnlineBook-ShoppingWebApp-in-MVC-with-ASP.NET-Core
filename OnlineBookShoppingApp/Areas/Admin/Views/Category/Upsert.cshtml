@model OnlineBookShoppingApp.Models.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
    var saveupd = Model.Id != 0 ? "Update" : "Save";
}

<form method="post">
    <div class="row">
        <div class="col-12 ">
            <h2 class="text-dark ">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-2 m-2">
                <div class="col-6 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
                @*<div class="col-4 offset-4">
                <button type="submit" class="btn btn-info form-control">
                @saveupd
                </button>
                </div>
                <div class="col-4" >
                <a asp-action="Index" class="btn btn-success form-control">
                Back To List
                </a>

                </div>*@

            </div>


        </div>
    </div>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />

}

